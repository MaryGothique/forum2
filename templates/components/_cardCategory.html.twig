<div class="card-category">
     <!-- category front file/page -->
    <h2>{{ category.title }}</h2>
    <!-- category title -->
    <div class="category">
    
        <div class="card-container">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            {# if the user or admin is connected #}
           <a href="{{ path('admin.category.edit', {id: category.id}) }}" class="btn-modify">Edit</a>
                
                {# if the author that has created the category is the same of the user, twig shows me the buttons #}
                    <form method="POST" action="{{ path('admin.category.delete', {'id': category.id}) }}"
                          onsubmit="return confirm('Are you sure you want to delete this category? This action cannot be undone.')">
                        <input type="hidden" name="token" value="{{ csrf_token('delete' ~ category.id) }}">
                        {# here there are the buttons #}
                        
                        <button class="btn-delete">Delete</button>
                    </form>
                   

            {% endif %}
        </div>
    </div>
</div>

