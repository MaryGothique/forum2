{% extends 'base.html.twig' %}

{% block body %}
    <h1>User Profile</h1>

    <div class="user_profile">
        <p>Nickname: {{ user.nickname }}</p>
        <p>Email: {{ user.email }}</p>
        <a href="{{ path('user_edit', {'id': user.id}) }}">Edit Profile</a>

        {# Link to delete confirmation page #}
        <a href="{{ path('user_delete_confirmation', {'id': user.id}) }}" class="btn btn-danger">Delete User</a>
    </div>
            <form action="{{ path('user_delete', {'id': user.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
            <button type="submit" class="btn btn-danger">Delete User</button>
            <a href="{{ path('user') }}" class="btn btn-secondary">Cancel</a>
        </form>
{% endblock %}

